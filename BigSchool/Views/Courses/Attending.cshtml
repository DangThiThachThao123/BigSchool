@using Microsoft.AspNet.Identity
@using BigSchool.Models
@model BigSchool.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Attending</h2>

<ul class="course">
    @foreach (var course in Model.UpcommingCourses)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                    @if (Model.ShowAction)
                    {
                        <button class="btn btn-default btn-sm js-toggle-follow"
                                data-user-id="@course.LecturerId">
                            Follow
                        </button>
                    }

                </span>
                <span class="caregory">
                    @course.Category.Name
                </span>
                @if (Model.ShowAction)
                {
                    var User_ID = @User.Identity.GetUserId();
                    ApplicationDbContext _dbContext = new ApplicationDbContext();
                    bool isGoing = _dbContext.Attendances.Any(a => a.CourseId == course.Id && a.AttendeeId == User_ID);

                    <div>
                        @if (!isGoing)
                        {
                            <button data-course-id="@course.Id" class="btn btn-default btn-sm
                                js-toggle-attendance">
                                Going?
                            </button>
                        }
                        else
                        {
                            <span class="text-danger">Đã tham gia</span>
                        }

                    </div>

                }

            </div>
        </li>
    }
</ul>

